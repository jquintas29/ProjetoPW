<%- include('./layouts/header.ejs') %>
    <link rel="stylesheet" type="text/css" href="../styles/perfil.css">
    <link rel="stylesheet" type="text/css" href="../styles/formularios.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="../scripts/perfil.js"></script>
    <title>JobList | Perfil</title>
    </head>

    <%- include('./layouts/cabecalho.ejs') %>

        <main class="feedProfile">
            <section class="perfil">
                <div id="profileBackground"></div>
                <div id="user">
                    <div id="divProfileImg">
                        <img id="profileImg" src="../images/perfil.jpg" alt="" style="height:100px; width:115px">
                    </div>
                    <p id="nomeUsr">
                        <%= name %>
                    </p>
                    <div id="gestao">
                        <button id="btnReload" class="btnPerfil" onclick="reloadPerfilPage()">X</button>
                        <% if(role==="user" || role==="company" ){ %>
                            <button id="btnGerirDescricao" class="btnPerfil"
                                onclick="formDescrição()">Descrição</button>
                            <% if(role==="user" ){ %>
                                <button id="btnGerirTrabalhos" class="btnPerfil" onclick="getWorkExperience()">Trabalhos</button>
                                <button id="btnGerirFormações" class="btnPerfil" onclick="getAcademicFormation()">Formações</button>
                                <button id="btnGerirAmigos" class="btnPerfil" onclick="getUserFriends()">Amigos</button>
                                <button id="btnGerirPedidosAmg" class="btnPerfil" onclick="getFriendsRequests()">Pedidos
                                    de amizade</button>
                                <% } %>
                                    <% } %>
                                        <% if(role==="admin" ){ %>
                                            <button id="btnGerirProfissionais" class="btnPerfil" onclick="showUsersToAdmin()">Profissionais</button>
                                            <button id="btnGerirEmpresas" class="btnPerfil" onclick="showCompaniesToAdmin()">Empresas</button>
                                            <button id="btnGerirPedidos" class="btnPerfil" onclick="showCompaniesToAdminWReq() ">Pedidos</button>
                                            <% } %>
                    </div>
                </div>

                <hr>
                <div id="formDescrição"></div>
                <div id="descrição" class="descricaoPerfil">
                    <% if(descricao !=null){ %>
                        <h2>Descrição</h2>
                        <%=descricao %>
                            <% } %>

                                <% if(nascimento !=null){ %>
                                    <h2>Data de nascimento</h2>
                                    <%=nascimento %>
                                        <% } %>

                                            <% if(localidade !=null){ %>
                                                <h2>Localidade</h2>
                                                <%=localidade %>
                                                    <% } %>

                                                        <% if(genero !=null){ %>
                                                            <h2>Gênero</h2>
                                                            <%=genero %>
                                                                <% } %>

                                                                    <% if(URLEmpresa !=null){ %>
                                                                        <h2>Link da pagina da empresa da Empresa</h2>
                                                                        <a href="<%= URLEmpresa %>">
                                                                            <%= name %>
                                                                        </a>
                                                                        <% } %>

                                                                            <% if(URLLogo !=null){ %>
                                                                                <h2>Link do logotipo da empresa</h2>
                                                                                <a href="<%= URLLogo %>">
                                                                                    <%= name %> Logo
                                                                                </a>
                                                                                <% } %>
                </div>

                <h2></h2>
                <p></p>

                <div id="listaAmigos">

                </div>
                <br><br><br>
            </section>
        </main>

        <%- include('./layouts/footer2.ejs') %>